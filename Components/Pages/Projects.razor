@page "/projects"
@using BlazorApp1.Services
@inject ProjectService ProjectService

<h3>Projects</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in ProjectService.Projects)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
            </tr>
        }
    </tbody>
</table>
